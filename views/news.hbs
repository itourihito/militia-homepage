{{!-- ニュースのリスト --}}
<div class="news_contents">
  <div class="title">
    <h1>NEWS</h1>
  </div>
  <div class="news_list">
    {{#each news}}
      <div class="news_list_item">
        <a href="/topic/{{this.id}}">
          <img src="img/news/{{this.img}}" alt="{{this.title}}" class="news_img">
          <div class="news_list_date">
            <div class="news_date">{{this.date_ap}}</div>
            <p class="news_item">{{this.title}}</p>
          </div>
        </a>          
      </div>
    {{/each}}
  </div>
</div>
